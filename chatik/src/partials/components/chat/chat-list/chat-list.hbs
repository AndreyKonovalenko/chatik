<div class="chat-list-container">
      <div class="chat-list-header">
        <p>{{header}}</p>
        {{#if controls}}
          {{> components/icon/icon key="chat-list-settings" type="add_circle" size="36" color=uiConstants.palette.LIGHT fill=0 }}
        {{/if}}
        {{#if edit}}
          {{> components/icon/icon key="chat-list-settings" type="settings" size="36" color=uiConstants.palette.LIGHT fill=1 }}
        {{/if}}
      </div>
      <div class="chat-list">
        <ul>
          {{> @partial-block}} 
        </ul>
      </div>
</div>