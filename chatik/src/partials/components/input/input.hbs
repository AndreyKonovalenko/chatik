<div class='input-wrapper'>
  <input
    class='input'
    type='{{type}}'
    value='{{value}}'
    placeholder='{{placeholder}}'
  />
  {{#if icon}}
    {{> components/icon/icon name="input" type="visibility" size="36" color=uiConstants.palette.light fill=1 }}
  {{/if}}
    <span class="error-text">{{error}}</spna>
</div>